<body>

    <div id="header-box">
        <div class="info-group">
            <span class="label">Score</span>
            <span id="score-display" class="value">0</span>
        </div>
        <div class="text-center">
            <h1 class="text-base font-black text-gray-700 tracking-tight">ğŸ APPLE GAME</h1>
            <p id="timer-display" class="text-sm font-mono font-bold text-gray-400">02:00</p>
        </div>
        <button id="restart-btn" class="bg-gray-800 text-white px-5 py-2 rounded-xl font-bold hover:bg-black transition-all active:scale-95 shadow-sm text-xs">
            RESET
        </button>
    </div>

    <div id="game-wrapper">
        <div id="game-container">
            <!-- JS ìƒì„± -->
        </div>
        <div id="selection-box"></div>
    </div>

    <div id="game-over" class="fixed inset-0 bg-black/80 backdrop-blur-sm flex items-center justify-center z-[1000] hidden">
        <div class="bg-white p-10 rounded-[30px] text-center max-w-sm w-full mx-4 shadow-2xl">
            <h2 class="text-2xl font-black text-gray-800 uppercase">Time Up!</h2>
            <div class="text-6xl font-black text-red-500 my-6" id="final-score">0</div>
            <button id="modal-restart-btn" class="w-full bg-red-500 text-white py-4 rounded-2xl font-black text-xl hover:bg-red-600 transition-all">
                REPLAY
            </button>
        </div>
    </div>

    <script>
        const COLS = 17;
        const ROWS = 10;
        let score = 0;
        let timeLeft = 120;
        let isDragging = false;
        let startPos = { x: 0, y: 0 };
        let timerInterval = null;
        let apples = [];
        let isGameOver = false;

        const container = document.getElementById('game-container');
        const selectionBox = document.getElementById('selection-box');
        const scoreDisplay = document.getElementById('score-display');
        const timerDisplay = document.getElementById('timer-display');
        const gameWrapper = document.getElementById('game-wrapper');

        function initGame() {
            clearInterval(timerInterval);
            container.innerHTML = '';
            apples = [];
            score = 0;
            timeLeft = 120;
            isGameOver = false;
            scoreDisplay.innerText = '0';
            updateTimer();
            document.getElementById('game-over').classList.add('hidden');

            for (let r = 0; r < ROWS; r++) {
                for (let c = 0; c < COLS; c++) {
                    const val = Math.floor(Math.random() * 9) + 1;
                    const appleEl = document.createElement('div');
                    appleEl.className = 'apple';
                    
                    const inner = document.createElement('div');
                    inner.className = 'apple-inner';
                    
                    const num = document.createElement('span');
                    num.className = 'apple-number';
                    num.innerText = val;
                    
                    inner.appendChild(num);
                    appleEl.appendChild(inner);
                    container.appendChild(appleEl);
                    apples.push({ el: appleEl, value: val, removed: false, rect: null });
                }
            }
            
            setTimeout(cacheApplePositions, 300); 
            startTimer();
        }

        function cacheApplePositions() {
            const wrapperRect = gameWrapper.getBoundingClientRect();
            apples.forEach(apple => {
                const r = apple.el.getBoundingClientRect();
                apple.rect = {
                    left: r.left - wrapperRect.left,
                    top: r.top - wrapperRect.top,
                    right: r.right - wrapperRect.left,
                    bottom: r.bottom - wrapperRect.top
                };
            });
        }

        function startTimer() {
            timerInterval = setInterval(() => {
                timeLeft--;
                updateTimer();
                if (timeLeft <= 0) endGame();
            }, 1000);
        }

        function updateTimer() {
            const m = Math.floor(timeLeft / 60);
            const s = timeLeft % 60;
            timerDisplay.innerText = `${String(m).padStart(2,'0')}:${String(s).padStart(2,'0')}`;
        }

        function endGame() {
            clearInterval(timerInterval);
            isGameOver = true;
            document.getElementById('final-score').innerText = score;
            document.getElementById('game-over').classList.remove('hidden');
        }

        function handleStart(e) {
            if (isGameOver) return;
            isDragging = true;
            const clientX = e.touches ? e.touches[0].clientX : e.clientX;
            const clientY = e.touches ? e.touches[0].clientY : e.clientY;
            const rect = gameWrapper.getBoundingClientRect();
            startPos = { x: clientX - rect.left, y: clientY - rect.top };
            
            selectionBox.style.display = 'block';
            selectionBox.style.width = '0px';
            selectionBox.style.height = '0px';
            selectionBox.style.left = startPos.x + 'px';
            selectionBox.style.top = startPos.y + 'px';
        }

        function handleMove(e) {
            if (!isDragging || isGameOver) return;
            const clientX = e.touches ? e.touches[0].clientX : e.clientX;
            const clientY = e.touches ? e.touches[0].clientY : e.clientY;
            const rect = gameWrapper.getBoundingClientRect();
            
            const curX = Math.max(0, Math.min(rect.width, clientX - rect.left));
            const curY = Math.max(0, Math.min(rect.height, clientY - rect.top));

            const l = Math.min(startPos.x, curX);
            const t = Math.min(startPos.y, curY);
            const w = Math.abs(startPos.x - curX);
            const h = Math.abs(startPos.y - curY);

            selectionBox.style.left = l + 'px';
            selectionBox.style.top = t + 'px';
            selectionBox.style.width = w + 'px';
            selectionBox.style.height = h + 'px';

            const box = { left: l, top: t, right: l + w, bottom: t + h };
            apples.forEach(apple => {
                if (apple.removed || !apple.rect) return;
                const isInside = !(apple.rect.right < box.left || apple.rect.left > box.right || apple.rect.bottom < box.top || apple.rect.top > box.bottom);
                apple.el.classList.toggle('selected', isInside);
            });
        }

        function handleEnd() {
            if (!isDragging || isGameOver) return;
            isDragging = false;
            selectionBox.style.display = 'none';
            
            const selected = apples.filter(a => !a.removed && a.el.classList.contains('selected'));
            if (selected.length === 0) return;

            const sum = selected.reduce((acc, curr) => acc + curr.value, 0);
            if (sum === 10) {
                const targetRect = scoreDisplay.getBoundingClientRect();
                selected.forEach(apple => {
                    const rect = apple.el.getBoundingClientRect();
                    const clone = apple.el.cloneNode(true);
                    clone.classList.add('flying');
                    clone.style.left = rect.left + 'px';
                    clone.style.top = rect.top + 'px';
                    clone.style.width = rect.width + 'px';
                    clone.style.height = rect.height + 'px';
                    document.body.appendChild(clone);

                    requestAnimationFrame(() => {
                        clone.style.left = targetRect.left + 'px';
                        clone.style.top = targetRect.top + 'px';
                    });
                    setTimeout(() => clone.remove(), 500);

                    apple.removed = true;
                    apple.el.classList.add('removed');
                });
                score += selected.length;
                scoreDisplay.innerText = score;
            } else {
                selected.forEach(apple => apple.el.classList.remove('selected'));
            }
        }

        gameWrapper.addEventListener('mousedown', handleStart);
        window.addEventListener('mousemove', handleMove);
        window.addEventListener('mouseup', handleEnd);
        gameWrapper.addEventListener('touchstart', (e) => { 
            if (e.target.closest('#game-wrapper')) {
                e.preventDefault(); 
                handleStart(e); 
            }
        }, { passive: false });
        window.addEventListener('touchmove', handleMove);
        window.addEventListener('touchend', handleEnd);
        
        document.getElementById('restart-btn').addEventListener('click', initGame);
        document.getElementById('modal-restart-btn').addEventListener('click', initGame);
        window.addEventListener('resize', cacheApplePositions);

        window.onload = initGame;
    </script>
</body>
</html>
